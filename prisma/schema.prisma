generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Invite {
  id String @id @default(cuid(2))
  addressee String

  emailAddress String?
  phoneNumber String?

  responses Response[]
  logins Login[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())

  @@map("invites")
}

model Login {
  accessCode String
  name String
  displayName String?

  invite Invite @relation(fields: [inviteId], references: [id])
  inviteId String

  @@id([accessCode, name])
  @@map("logins")
}

enum Menu {
  Fish
  Alternative
  Kids
}

enum Location {
  Italy
  Romania
}

enum ResponseType {
  NoResponse
  Declined
  Tentative
  Accepted
}

model Response {
  location Location

  invite Invite @relation(fields: [inviteId], references: [id])
  inviteId String

  givenResponse ResponseType @default(NoResponse)
  persons Person[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())

  @@id ([inviteId, location])
  @@map ("responses")
}

model Person {
  name String

  menuPreference Menu @default(Fish)
  dietaryRequirement String?
  allergies String?

  response Response @relation(fields: [inviteId, location], references: [inviteId, location])
  inviteId String
  location Location
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())

  @@id([inviteId, location, name])
  @@map("persons")
}